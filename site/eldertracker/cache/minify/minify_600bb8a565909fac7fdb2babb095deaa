/* 559 */ function createSelectBox(options, selected) {
/* 560 */     var select = $('<select>');
/* 561 */     $.each(options, function(k,v) {
/* 562 */         select.append($("<option>" + v + "</option>").attr('value', k).attr('selected', selected==k ? 'selected' :''));
/* 563 */     });
/* 564 */     return select;
/* 565 */ }
